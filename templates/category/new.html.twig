{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} | Ajoute une série
{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-5">Ajoute une catégorie</h1>
        <strong class="text-center">Pour créer une série il te faut tout d'abord créer une catégorie</strong>
        <div class="form-group">
            <div class="form-group"> {{ form_start(form) }}</div>
            <div class="form-group"> {{ form_widget(form) }}</div>
            <div class="form-group"> {{ form_errors(form) }}</div>
            <input class="form-control bg-light" type='submit' value='Ajoute la categorie'>
            {{ form_end(form) }}
        </div>
        <div>
            <strong class="text-center">Si la catégorie existe deja passe directement à l'étape suivante :</strong>
            <a class="btn btn-light " href="{{ path('program_new') }}">Ta série</a>
        </div>
    </div>
    </div>


{% endblock %}