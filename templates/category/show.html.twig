{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Programs
{% endblock %}

{% block body %}
    <h1>Series de la categorie {{ name }}</h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la fiche</a>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a class="btn btn-primary mt-5 text-center" href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}