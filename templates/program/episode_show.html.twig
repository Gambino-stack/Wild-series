{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Episode {{ episode.number }} {% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center mb-5">{{ program.title }}</h1>
        <div class="row text-center">
            <div class="col-12 col-md-10 col-lg-12">
                <ul class="list-group list-group-horizontal justify-content-center mb-5">
                    <li class="list-group-item">Saison : {{ season.number }}</li>
                    <li class="list-group-item">Épisode : {{ episode.number }}</li>
                    <li class="list-group-item">Episode : {{ episode.title }}</li>
                </ul>
                <div class="card-text text-center mt-5 mb-5">
                    <strong>Synopsis:</strong> {{ episode.synopsis }}
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-12 mb-5">
                    <img class="img-fluid align-self-center" src="{{ program.poster }}"
                         alt="{{ program.title }} poster">
                </div>
                <div class="col-12 col-sm-12 col-md-6 col-lg-12 mb-5">
                    {% for comment in episode.comments %}
                        <span class="badge badge-success">Note : {{ comment.rate }} / 5 </span> - {{ comment.comment }} - Posté par {{ comment.author.email}}  | <br>
                    {% endfor %}
                    {% if app.user %}
                    <div class="container form">
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                        {{ form_errors(form) }}
                        <input class="form-control bg-light" type='submit' value='Ajoute un commentaire'>
                        {{ form_end(form) }}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}