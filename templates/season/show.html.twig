{% extends 'base.html.twig' %}

{% block title %}{{ 'Season'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'Season'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ 'Number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'Year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'Description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">{{ 'back-to-list'|trans }}</a>

    <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}
